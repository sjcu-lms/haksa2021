<script>
$("#ColorIndex").on("change", function(){
	$("#sitemap_blind section").removeClass("");
	if(this.value == '기본색') {$("#sitemap_blind section").addClass("color0");}
	if(this.value == '노란색') {$("#sitemap_blind section").addClass("color1");}
	if(this.value == '하얀색') {$("#sitemap_blind section").addClass("color2");}
	if(this.value == '파란색') {$("#sitemap_blind section").addClass("color3");}
	if(this.value == '빨강색') {$("#sitemap_blind section").addClass("color4");}
	if(this.value == '보라색') {$("#sitemap_blind section").addClass("color5");}
	if(this.value == '초록색') {$("#sitemap_blind section").addClass("color6");}
});
$("#BgColorIndex").on("change", function(){
	$("#sitemap_blind section").removeClass("");
	if(this.value == '기본색') {$("#sitemap_blind").addClass("bg0");}
	if(this.value == '노란색') {$("#sitemap_blind").addClass("bg1");}
	if(this.value == '파란색') {$("#sitemap_blind").addClass("bg2");}
	if(this.value == '빨강색') {$("#sitemap_blind").addClass("bg3");}
	if(this.value == '보라색') {$("#sitemap_blind").addClass("bg4");}
	if(this.value == '초록색') {$("#sitemap_blind").addClass("bg5");}
});

$("#btn_small").click(function(){zoomIn()});
$("#btn_normal").click(function(){zoomReset()});
$("#btn_big").click(function(){zoomOut()});
var nowZoom = 100;
function zoomIn() {
	nowZoom = nowZoom - 10;
	if(nowZoom <= 70) nowZoom = 70;
	zooms();
}


function zoomOut() {
		nowZoom = nowZoom + 20;
		if(nowZoom >= 500) nowZoom = 500;
		zooms();
}

function zoomReset(){
	nowZoom = 100;
	zooms();
}

function zooms(){
	document.body.style.zoom = nowZoom + '%';

	if(nowZoom==70){
		alert ("30%축소 되었습니다. 더 이상 축소할 수 없습니다.");
	}

	if(nowZoom==500){
		alert ("500%확대 되었습니다. 더 이상 확대할 수 없습니다.");
	}
}


</script>
